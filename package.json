{
  "name": "themeethub",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:safe": "ulimit -n 65536 2>/dev/null || true; nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "eslint . --ext .ts,.vue",
    "test": "node vitest-runner.js",
    "test:frontend": "vitest run app/",
    "test:ui": "vitest app/",
    "test:stores": "vitest run tests/unit/stores/",
    "test:backend": "vitest run tests/unit/nitro/ tests/unit/api/",
    "test:api": "vitest run tests/unit/api/",
    "test:nitro": "vitest run tests/unit/nitro/",
    "test:nuxt": "vitest run tests/nuxt/",
    "test:integration": "vitest run tests/integration/",
    "test:integration:db": "NUXT_USE_MOCKS=false vitest run tests/integration/ tests/integration-db/",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "postinstall": "nuxt prepare && node patch-vue-plugin.js && prisma generate"
  },
  "dependencies": {
    "@nuxt/content": "^3.11.2",
    "@nuxt/image": "^2.0.0",
    "@nuxt/ui": "^4.4.0",
    "@nuxtjs/i18n": "^10.2.3",
    "@pinia/nuxt": "^0.11.3",
    "@prisma/client": "^5.22.0",
    "@unhead/vue": "^2.1.4",
    "better-sqlite3": "^12.6.2",
    "nuxt": "^4.3.1",
    "pinia": "^3.0.4",
    "prisma": "^5.22.0",
    "vue": "^3.5.28",
    "vue-router": "^4.5.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.15.1",
    "@nuxt/test-utils": "^4.0.0",
    "@playwright/test": "^1.58.2",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^10.0.1",
    "h3": "^1.15.4",
    "happy-dom": "^20.7.0",
    "jsdom": "^28.1.0",
    "listhen": "^1.9.0",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
